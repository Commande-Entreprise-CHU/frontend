{
  "metadata": {
    "name": "PréopConsult",
    "description": "Consultation pré-opératoire"
  },
  "sections": [
    {
      "title": "Données Administratives",
      "fields": [
        {
          "type": "Input",
          "label": "Date",
          "name": "date",
          "pdfName": "Date",
          "inputType": "date",
          "required": true
        },
        {
          "type": "Input",
          "label": "Nom",
          "name": "nom",
          "pdfName": "Nom",
          "placeholder": "Nom du patient",
          "required": true
        },
        {
          "type": "Input",
          "label": "Prénom",
          "name": "prenom",
          "pdfName": "Prénom",
          "placeholder": "Prénom du patient",
          "required": true
        },
        {
          "type": "Input",
          "label": "Date de naissance",
          "name": "date_naissance",
          "pdfName": "Date de naissance",
          "inputType": "date",
          "required": true
        },
        {
          "type": "Input",
          "label": "IPP",
          "name": "ipp",
          "pdfName": "IPP",
          "placeholder": "Identifiant patient",
          "required": false
        },
        {
          "type": "Radio",
          "label": "Sexe",
          "name": "sexe",
          "pdfName": "Sexe",
          "options": [
            { "value": "femme", "label": "Femme" },
            { "value": "homme", "label": "Homme" }
          ],
          "required": true
        },
        {
          "type": "Input",
          "label": "Poids",
          "name": "poids",
          "pdfName": "Poids",
          "placeholder": "en kg",
          "required": false
        }
      ]
    },
    {
