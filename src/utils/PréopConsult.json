          "options": [
            {
              "value": "yes",
              "label": "Oui",
              "fields": [
                {
                  "type": "Input",
                  "label": "Détails des antécédents médicaux",
                  "name": "details_atcd_medicaux",
                  "pdfName": "Détails ATCD médicaux",
                  "placeholder": "Lister les antécédents",
                  "required": false
                }
              ]
